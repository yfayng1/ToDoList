<%- model_class = ToDo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:task) %>:</strong></dt>
  <dd><%= @to_do.task %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @to_do.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_time) %>:</strong></dt>
  <dd><%= @to_do.due_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @to_do.priority %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              to_dos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_to_do_path(@to_do), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              to_do_path(@to_do),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
